{
  "name": "fernhill-tribe-app",
  "version": "1.6.0",
  "private": true,
  "description": "A secure digital hearth for the Fernhill Ecstatic Dance community",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "seed-admin": "tsx scripts/seed-admin.ts",
    "docs:update": "node scripts/update-docs.js",
    "version:bump": "node scripts/bump-version.js",
    "predeploy": "node scripts/pre-deploy.js",
    "predeploy:quick": "node scripts/pre-deploy.js --skip-build",
    "predeploy:fix": "node scripts/pre-deploy.js --skip-build --fix",
    "release": "node scripts/pre-deploy.js --skip-build --fix --bump",
    "release:minor": "node scripts/pre-deploy.js --skip-build --fix --bump-minor",
    "release:major": "node scripts/pre-deploy.js --skip-build --fix --bump-major",
    "deploy": "node scripts/pre-deploy.js --fix --bump && git push origin main",
    "prepare": "husky install || true"
  },
  "dependencies": {
    "@supabase/ssr": "^0.5.2",
    "@supabase/supabase-js": "^2.45.4",
